{% render 'partials/head.liquid' %}
{% include 'partials/header.liquid' %}
<!--skeleton section-->
<section id="index-skeleton" class="index-skeleton">
  <div class="roles-list">
    {% for i in (1..1) %}
      <div class="role-button skeleton-card">
        <div class="skeleton-avatar"></div>
        <div class="skeleton-label"></div>
      </div>
    {% endfor %}
  </div>

  <article class="new-role-button">
    <div class="skeleton-btn-group">
      <div class="skeleton-btn"></div>
      <div class="skeleton-btn alt"></div>
    </div>
  </article>
</section>

<main class="main-content hidden">

  <!-- Roles List -->
  <section class="roles-list" label="Roles list">
    {% for role in roles %}
      <a href="/{{ role | downcase }}" class="role-button">
            <picture>
      <source 
        srcset="/assets/photos/avatars/{{ role | downcase }}.webp" 
        type="image/webp"
      >
      <img 
        src="/assets/photos/avatars/{{ role | downcase }}.png" 
        alt="Avatar for {{ role }} role"
        width="150" height="150"
        {% if forloop.first %}
          loading="eager" fetchpriority="high"
        {% else %}
          loading="lazy"
        {% endif %}
      >
    </picture>
        <h2 class="label">{{ role | capitalize }}</h2>
      </a>
    {% endfor %}
  </section>

  <!-- New Role Buttons -->
  <article class="new-role-button">
    <h2 hidden>New Role</h2>
    <a href="/" class="go-button">Role</a>
    <a href="/?seen={{ roles | join: ',' }}" class="alt-button">Get another role</a>
  </article>
</main>

{% render 'partials/foot.liquid' %}
